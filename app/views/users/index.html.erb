<section class="users-section">
  <ul class="users-list">
    <% @users.each do |user| %>
      <li>
        Name: <%= user.name %>
        <span class="profile-link">
          <%= link_to 'See Profile',  user_path(user), class: 'profile-link' %>
        </span>
        Id: <%= user.id%>
        <%= button_to "Send Friendship Invitation", friendships_path, params: {friend_id: user.id} %>
      </li>
    <% end %>
  </ul>
</section>
